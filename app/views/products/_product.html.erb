<%= form_with(model: product, local: true, multipart: true, class: "container mt-4") do |form| %>
  <div class="card shadow p-4">
    <h2 class="text-center mb-4">Agregar Producto</h2>

    <div class="mb-3">
      <%= form.label :nombre, class: "form-label" %>
      <%= form.text_field :nombre, class: "form-control", placeholder: "Ingrese el nombre del producto" %>
    </div>

    <div class="mb-3">
      <%= form.label :descripcion, class: "form-label" %>
      <%= form.text_area :descripcion, class: "form-control", placeholder: "DescripciÃ³n del producto", rows: 3 %>
    </div>

    <div class="mb-3">
      <%= form.label :stock, class: "form-label" %>
      <%= form.number_field :stock, class: "form-control", min: 0 %>
    </div>

    <div class="mb-3">
      <%= form.label :precio, class: "form-label" %>
      <%= form.text_field :precio, class: "form-control", placeholder: "Ingrese el precio" %>
    </div>

    <div class="mb-3">
      <%= form.label :imagen_referencial, class: "form-label" %>
      <%= form.file_field :imagen_referencial, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= form.label :marca, class: "form-label" %>
      <%= form.text_field :marca, class: "form-control", placeholder: "Ingrese la marca del producto" %>
    </div>

    <div class="d-grid">
      <%= form.submit "Guardar Producto", class: "btn btn-success" %>
    </div>
  </div>
<% end %>

