<div class="container mt-4">
  <div class="card shadow p-4">
    <h2 class="text-center mb-4"><%= @product.new_record? ? "Nuevo Producto" : "Editar Producto" %></h2>

    <%= form_with(model: @product, local: true, multipart: true, html: { class: "needs-validation" }) do |f| %>
      <div class="mb-3">
        <%= f.label :nombre, class: "form-label" %>
        <%= f.text_field :nombre, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :descripcion, class: "form-label" %>
        <%= f.text_area :descripcion, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :stock, class: "form-label" %>
        <%= f.number_field :stock, class: "form-control", min: 0 %>
      </div>

      <div class="mb-3">
        <%= f.label :precio, class: "form-label" %>
        <%= f.text_field :precio, class: "form-control", required: true %>
      </div>

      <div class="mb-3">
        <%= f.label :imagen_referencial, class: "form-label" %>
        <%= f.file_field :imagen_referencial, class: "form-control" %>
      </div>

      <div class="mb-3">
        <%= f.label :marca, class: "form-label" %>
        <%= f.text_field :marca, class: "form-control" %>
      </div>

      <div class="text-center">
        <%= f.submit "Guardar", class: "btn btn-success" %>
      </div>
    <% end %>
  </div>
</div>
