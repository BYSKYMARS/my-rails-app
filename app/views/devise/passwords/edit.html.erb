<h2 class="text-center my-4">🔒 Cambiar contraseña</h2>

<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card shadow-lg p-4">
        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>
          <%= f.hidden_field :reset_password_token %>

          <div class="mb-3">
            <%= f.label :password, "Nueva contraseña", class: "form-label fw-bold" %>
            <% if @minimum_password_length %>
              <small class="text-muted">(<%= @minimum_password_length %> caracteres mínimo)</small>
            <% end %>
            <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="mb-3">
            <%= f.label :password_confirmation, "Confirmar nueva contraseña", class: "form-label fw-bold" %>
            <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
          </div>

          <div class="d-grid">
            <%= f.submit "🔄 Cambiar contraseña", class: "btn btn-primary btn-lg" %>
          </div>
        <% end %>
      </div>

      <div class="text-center mt-3">
        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
