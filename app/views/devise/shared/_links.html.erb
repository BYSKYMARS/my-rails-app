<div class="text-center mt-3">
  <% if controller_name != 'sessions' %>
    <%= link_to "🔑 Iniciar sesión", new_session_path(resource_name), class: "btn btn-outline-primary w-100 mb-2" %>
  <% end %>

  <% if devise_mapping.registerable? && controller_name != 'registrations' %>
    <%= link_to "📝 Registrarse", new_registration_path(resource_name), class: "btn btn-outline-success w-100 mb-2" %>
  <% end %>

  <% if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
    <%= link_to "❓ ¿Olvidaste tu contraseña?", new_password_path(resource_name), class: "btn btn-outline-warning w-100 mb-2" %>
  <% end %>

  <% if devise_mapping.confirmable? && controller_name != 'confirmations' %>
    <%= link_to "📩 No recibiste las instrucciones de confirmación?", new_confirmation_path(resource_name), class: "btn btn-outline-info w-100 mb-2" %>
  <% end %>

  <% if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
    <%= link_to "🔓 No recibiste instrucciones para desbloquear?", new_unlock_path(resource_name), class: "btn btn-outline-secondary w-100 mb-2" %>
  <% end %>

  <% if devise_mapping.omniauthable? %>
    <% resource_class.omniauth_providers.each do |provider| %>
      <%= button_to "🌍 Iniciar sesión con #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), data: { turbo: false }, class: "btn btn-outline-dark w-100 mb-2" %>
    <% end %>
  <% end %>
</div>

